<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>OSRU Burnout Dashboard</title>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    body { font-family: Arial, sans-serif; background: #f4f4f4; padding: 20px; }
    h1 { color: #333; }
    .chart-container { margin-top: 40px; max-width: 800px; }
    canvas { background: white; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1); }
  </style>
</head>
<body>
  <h1>ðŸ“Š OSRU Burnout Dashboard</h1>
  <p>Live analysis of survey responses</p>

  <div class="chart-container">
    <canvas id="burnoutChart"></canvas>
  </div>

  <script>
    const SHEET_CSV_URL = 'https://docs.google.com/spreadsheets/d/e/2PACX-1vTqn9M4mQxbQN-q35n-ZgnIYhVyzG8IPQ9toqNhetmeTd6NiN-ebljJSUWpn_aBuz13886l9lwq2Gqd/pub?output=csv';

    fetch(SHEET_CSV_URL)
      .then(response => response.text())
      .then(csv => {
        const rows = csv.split('\n').slice(1); // Skip header
        const scores = [];

        rows.forEach(row => {
          const cols = row.split(',');
          const values = cols.slice(5, 11).map(val => parseFloat(val)).filter(val => !isNaN(val));
          if (values.length) {
            const avg = values.reduce((a, b) => a + b, 0) / values.length;
            scores.push(avg);
          }
        });

        const labels = scores.map((_, i) => `Participant ${i + 1}`);

        const ctx = document.getElementById('burnoutChart').getContext('2d');
        new Chart(ctx, {
          type: 'line',
          data: {
            labels: labels,
            datasets: [{
              label: 'Burnout Score',
              data: scores,
              borderColor: 'rgba(255, 99, 132, 0.8)',
              backgroundColor: 'rgba(255, 99, 132, 0.2)',
              fill: true,
              tension: 0.3
            }]
          },
          options: {
            responsive: true,
            scales: {
              y: {
                beginAtZero: true,
                max: 100
              }
            }
          }
        });
      })
      .catch(error => console.error('Error loading data:', error));
  </script>
</body>
</html>
